{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            // <-- Components -->
            "@components/commons/*": "src/components/commons/*",
            "@components/core/*": "src/components/core/*",
            "@components/widget/*": "src/components/widget/*",
            // <-- Environment -->
            "@environment/styles/*": "src/styles/*",
            "@environment/i18n/*": "i18n/*",
            // <-- Media -->
            "@public/media/*": "public/media/*",
            // <-- Redux -->
            "@library/redux/*": "src/redux/*",
            // <-- Helper -->
            "@library/helper/*": "src/helper/*"
        }
    }
}
